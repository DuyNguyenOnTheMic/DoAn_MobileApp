<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/adminManage_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Quản lý"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminManage_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminManage_iv_admin"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/admin" />


        <ImageView
            android:id="@+id/adminManage_iv_category"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/brand" />

        <ImageView
            android:id="@+id/adminManage_iv_product"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/product" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adminManage_tv_admin"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"
            android:text="Quản trị"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/adminManage_tv_category"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Danh mục"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/adminManage_tv_product"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminManage_iv_order"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/order" />

        <ImageView
            android:id="@+id/adminManage_iv_voucher"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/voucher" />

        <ImageView
            android:id="@+id/adminManage_iv_nullImage"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/white_image" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adminManage_tv_order"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"
            android:text="Đơn hàng"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/adminManage_tv_voucher"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Voucher"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/adminManage_tv_nullText"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />

    </LinearLayout>





</RelativeLayout>